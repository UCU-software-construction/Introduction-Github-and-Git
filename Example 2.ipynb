#!/usr/bin/env python3

import shutil
import sys
import platform

def check_disk_usage(disk, min_absolute, min_percent):
    """Returns True if there is enough free disk space, False otherwise."""
    du = shutil.disk_usage(disk)
    percent_free = 100 * du.free / du.total
    gigabytes_free = du.free / 2**30

    print(f"Disk usage for '{disk}':")
    print(f"  Total: {du.total / 2**30:.2f} GB")
    print(f"  Used:  {du.used / 2**30:.2f} GB")
    print(f"  Free:  {gigabytes_free:.2f} GB ({percent_free:.2f}%)")

    if percent_free < min_percent or gigabytes_free < min_absolute:
        print("WARNING: Not enough disk space!")
        return False
    return True

def main():
    # Choose disk based on OS
    disk = "/" if platform.system() != "Windows" else "C:\\"

    # Check for at least 2 GB and 10% free
    if not check_disk_usage(disk, 2, 10):
        return 1

    print("Everything ok")
    return 0

if __name__ == "__main__":
    sys.exit(main())

