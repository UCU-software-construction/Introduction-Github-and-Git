#!/usr/bin/env python3

import shutil

def check_disk_usage(disk, min_absolute, min_percent):
    """Returns True if there is enough free disk space, False otherwise."""
    du = shutil.disk_usage(disk)
    percent_free = 100 * du.free / du.total
    gigabytes_free = du.free / 2**30
    if percent_free < min_percent or gigabytes_free < min_absolute:
        # Print detailed info if not enough space
        print(f"Disk usage details for '{disk}':")
        print(f"  Total: {du.total / 2**30:.2f} GB")
        print(f"  Used:  {du.used / 2**30:.2f} GB")
        print(f"  Free:  {du.free / 2**30:.2f} GB")
        print(f"  Free percent: {percent_free:.2f}%")
        return False
    return True

def main():
    # Check for at least 2 GB and 10% free
    if not check_disk_usage("/", 2, 10):
        print("ERROR: Not enough disk space")
        return 1

    print("Everything ok")
    return 0

if __name__ == "__main__":
    exit(main())
